<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Uptime Monitor</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#f0f9ff',
              500: '#3b82f6',
              600: '#2563eb',
              700: '#1d4ed8'
            }
          },
          animation: {
            'fade-in': 'fadeIn 0.5s ease-in-out',
            'slide-up': 'slideUp 0.3s ease-out',
            'pulse-slow': 'pulse 3s infinite'
          }
        }
      }
    }
  </script>
  <style>
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes slideUp {
      from { transform: translateY(10px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.8);
    }
  </style>
  <script>
    // Register service worker for offline functionality
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then((registration) => {
            console.log('SW registered: ', registration);
          })
          .catch((registrationError) => {
            console.log('SW registration failed: ', registrationError);
          });
      });
    }
  </script>
</head>
<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 text-slate-800 font-sans min-h-screen">
  <!-- Loading Overlay -->
  <div id="loading-overlay" class="fixed inset-0 bg-white/80 backdrop-blur-sm z-50 flex items-center justify-center hidden">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto mb-4"></div>
      <p class="text-slate-600">Loading...</p>
    </div>
  </div>

  <!-- Toast Notifications -->
  <div id="toast-container" class="fixed top-4 right-4 z-40 space-y-2"></div>

  <header class="glass-effect border-b border-white/20 shadow-sm">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
      <a href="/" class="flex items-center space-x-3 text-xl font-bold text-slate-900 hover:text-primary-600 transition-colors">
        <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center">
          <i class="fas fa-heartbeat text-white text-sm"></i>
        </div>
        <span>Uptime Monitor</span>
      </a>
      <div class="flex items-center space-x-4">
        <% if (isAuthenticated) { %>
          <div class="hidden sm:flex items-center space-x-3 text-sm text-slate-600">
            <i class="fas fa-user-circle"></i>
            <span>Welcome, <strong><%= user.username %></strong></span>
          </div>
          <form action="/logout" method="POST">
            <button type="submit" class="bg-white/50 hover:bg-white/80 text-slate-700 font-semibold py-2 px-4 rounded-lg transition-all text-sm border border-white/30 hover:border-white/50">
              <i class="fas fa-sign-out-alt mr-2"></i>Logout
            </button>
          </form>
        <% } else { %>
          <a href="/login" class="text-sm font-medium text-slate-700 hover:text-slate-900 transition-colors">Login</a>
          <a href="/register" class="bg-primary-600 hover:bg-primary-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-sm shadow-lg hover:shadow-xl">Register</a>
        <% } %>
      </div>
    </nav>
  </header>
  <main class="container mx-auto p-4 sm:p-6 lg:p-8 animate-fade-in">
    <div class="flex items-center space-x-3 mb-8">
      <h1 class="text-3xl font-bold text-slate-900"><%= title %></h1>
      <% if (title === 'Uptime Monitor') { %>
        <div class="flex items-center space-x-2 text-sm text-slate-600">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse-slow"></div>
          <span>Live monitoring</span>
        </div>
      <% } %>
    </div>
