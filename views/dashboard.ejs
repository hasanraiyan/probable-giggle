<%- include('partials/header', { title: 'Uptime Monitor' }) %>

<div class="space-y-8">

  <!-- Add Site Card -->
  <div class="bg-white p-6 rounded-xl border border-slate-200">
    <h2 class="text-xl font-semibold text-slate-800 mb-4">Add a New Site</h2>
    <form action="/add" method="POST" class="flex flex-col sm:flex-row items-stretch gap-3">
      <input
        type="url"
        name="url"
        placeholder="e.g., https://google.com"
        class="flex-grow p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
        required
      >
      <button
        type="submit"
        class="bg-slate-900 hover:bg-slate-700 text-white font-bold py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-900"
      >
        Add & Monitor
      </button>
    </form>
  </div>

  <!-- Monitored Sites Card -->
  <div class="bg-white p-6 rounded-xl border border-slate-200">
    <div class="flex flex-col sm:flex-row justify-between sm:items-center mb-4 gap-4">
      <h2 class="text-xl font-semibold text-slate-800">Monitored Sites</h2>
      <form action="/check-all" method="POST">
        <button
          type="submit"
          class="w-full sm:w-auto bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-2 px-4 rounded-lg transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500"
        >
          Check All Now
        </button>
      </form>
    </div>

    <!-- Sites Table -->
    <div class="overflow-x-auto border border-slate-200 rounded-lg">
      <table class="min-w-full bg-white" id="sites-table">
        <thead class="bg-slate-50">
          <tr>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">URL</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Status</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Uptime (24h)</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Uptime (7d)</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Response</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Last Checked</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Details</th>
            <th class="py-3 px-4 text-left text-sm font-medium text-slate-500">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% if (sites.length > 0) { %>
            <% sites.forEach(site => { %>
              <tr class="hover:bg-slate-50/50 transition-colors">
                <td class="py-3 px-4 font-medium text-slate-900">
                  <a href="<%= site.url %>" target="_blank" rel="noopener noreferrer" class="hover:underline"><%= site.url %></a>
                </td>
                <td class="py-3 px-4">
                  <% if (site.is_paused) { %>
                    <span class="bg-yellow-500/10 text-yellow-700 text-xs font-semibold px-2.5 py-1 rounded-full">PAUSED</span>
                  <% } else if (site.status === 'UP') { %>
                    <span class="bg-green-500/10 text-green-700 text-xs font-semibold px-2.5 py-1 rounded-full">UP</span>
                  <% } else if (site.status === 'DOWN') { %>
                    <span class="bg-red-500/10 text-red-700 text-xs font-semibold px-2.5 py-1 rounded-full">DOWN</span>
                  <% } else { %>
                    <span class="bg-slate-500/10 text-slate-700 text-xs font-semibold px-2.5 py-1 rounded-full">N/A</span>
                  <% } %>
                </td>
                <td class="py-3 px-4 text-sm text-slate-600"><%= site.uptime['24h'] %></td>
                <td class="py-3 px-4 text-sm text-slate-600"><%= site.uptime['7d'] %></td>
                <td class="py-3 px-4 text-sm text-slate-600"><%= site.response_time !== null ? `${site.response_time} ms` : '—' %></td>
                <td class="py-3 px-4 text-sm text-slate-600"><%= site.checked_at ? new Date(site.checked_at).toLocaleString() : '—' %></td>
                <td class="py-3 px-4 text-sm text-slate-500 truncate" style="max-width: 180px;" title="<%= site.details || '' %>"><%= site.details || '' %></td>
                <td class="py-3 px-4">
                  <div class="flex items-center space-x-3">
                    <form action="/check/<%= site.id %>" method="POST" class="m-0">
                      <button type="submit" class="bg-slate-100 hover:bg-slate-200 text-slate-600 text-xs font-semibold py-1 px-3 rounded-md transition-colors <%= site.is_paused ? 'opacity-50 cursor-not-allowed' : '' %>" <%= site.is_paused ? 'disabled' : '' %>>Check</button>
                    </form>
                    <form action="/site/<%= site.id %>/toggle-pause" method="POST" class="m-0">
                      <button type="submit" class="bg-slate-100 hover:bg-slate-200 text-slate-600 text-xs font-semibold py-1 px-3 rounded-md transition-colors">
                        <%= site.is_paused ? 'Resume' : 'Pause' %>
                      </button>
                    </form>
                    <a href="/site/<%= site.id %>" class="bg-slate-100 hover:bg-slate-200 text-slate-600 text-xs font-semibold py-1 px-3 rounded-md transition-colors">Logs</a>
                    <form action="/delete/<%= site.id %>" method="POST" class="m-0 delete-form">
                      <button type="submit" class="bg-red-500/10 hover:bg-red-500/20 text-red-600 text-xs font-semibold py-1 px-3 rounded-md transition-colors">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="8" class="py-8 px-4 text-center text-slate-500">
                <p class="font-semibold">No sites are being monitored yet.</p>
                <p class="text-sm">Add one above to get started!</p>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<script src="/js/dashboard.js"></script>
<%- include('partials/footer') %>
