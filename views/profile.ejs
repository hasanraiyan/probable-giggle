<%- include('partials/header', { title: 'User Profile' }) %>

<div class="max-w-2xl mx-auto">
  <div class="glass-effect p-6 rounded-xl border border-white/20 shadow-lg">
    <div class="flex items-center space-x-3 mb-6">
      <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-user text-primary-600"></i>
      </div>
      <h2 class="text-2xl font-bold text-slate-900">User Profile</h2>
    </div>

    <% if (success) { %>
    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
      <div class="flex items-center">
        <i class="fas fa-check-circle text-green-500 mr-2"></i>
        <span class="text-green-800"><%= success %></span>
      </div>
    </div>
    <% } %>

    <% if (error) { %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex items-center">
        <i class="fas fa-exclamation-circle text-red-500 mr-2"></i>
        <span class="text-red-800"><%= error %></span>
      </div>
    </div>
    <% } %>

    <div class="mb-6">
      <h3 class="text-lg font-semibold text-slate-800 mb-2">Account Information</h3>
      <div class="bg-white/50 p-4 rounded-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Username</label>
            <div class="p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-900"><%= user.username %></span>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">User ID</label>
            <div class="p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-900"><%= user.id %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <form action="/profile" method="POST">
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-slate-800 mb-2">Telegram Notifications</h3>
        <p class="text-sm text-slate-600 mb-4">
          Configure Telegram notifications to receive real-time alerts when your monitored sites go down.
        </p>
        
        <div class="bg-white/50 p-4 rounded-lg">
          <div class="mb-4">
            <label for="telegramChatId" class="block text-sm font-medium text-slate-700 mb-2">
              Telegram Chat ID
            </label>
            <input 
              type="text" 
              id="telegramChatId" 
              name="telegramChatId" 
              value="<%= user.telegram_chat_id || '' %>"
              placeholder="Enter your Telegram Chat ID"
              class="w-full p-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all bg-white"
            >
            <p class="mt-2 text-sm text-slate-500">
              To get your Chat ID:
              <ol class="list-decimal list-inside mt-1 space-y-1">
                <li>Start a chat with <a href="https://t.me/userinfobot" target="_blank" class="text-primary-600 hover:underline">@userinfobot</a> on Telegram</li>
                <li>Send the message <code class="bg-slate-100 px-1 rounded">/start</code></li>
                <li>Copy the ID number from the bot's response</li>
              </ol>
            </p>
          </div>
        </div>
      </div>

      <div class="flex justify-end">
        <button 
          type="submit"
          class="bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white font-bold py-3 px-6 rounded-lg transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          <i class="fas fa-save mr-2"></i>Save Changes
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>